{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Type</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Namefr</th>
                <td>{{ entity.nameFr }}</td>
            </tr>
            <tr>
                <th>Namede</th>
                <td>{{ entity.nameDe }}</td>
            </tr>
            <tr>
                <th>Namees</th>
                <td>{{ entity.nameEs }}</td>
            </tr>
            <tr>
                <th>Namepl</th>
                <td>{{ entity.namePl }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_type') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_type_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_type_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
