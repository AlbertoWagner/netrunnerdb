{% extends 'NetrunnerdbBuilderBundle::layout.html.twig' %}

{% block body %}

<div class="container">
<div class="row">

<div class="col-md-6">

   	<h3>Card comments:</h3>
<table class="table">
<thead></thead>
<tbody>

{% for opinion in opinions %}

<tr>
<td>
<div>{{ opinion.creation|date('M d, Y') }} on <a href="{{ path('netrunnerdb_netrunner_cards_zoom', {card_code:opinion.card_code}) }}#{{ opinion.id }}">{{ opinion.card_title }}</a>, by <a href="{{ path('user_profile_view', {user_id:opinion.user_id,user_name:opinion.author}) }}" class="opinion-author username">{{ opinion.author }}</a>:</div>
{{ opinion.text|raw }}
</td>
</tr>
{% endfor %}

</tbody>
</table>

<div class="text-center">
<ul class="pagination pagination-sm" style="margin:0">
{% if prevurl is null %}
  <li class="disabled"><a href="#">&laquo;</a></li>
{% else %}
  <li class=""><a href="{{ prevurl }}">&laquo;</a></li>
{% endif %}
{% for page in pages %}
{% if page.current %}
  <li class="active"><a href="{{ page.url }}">{{ page.numero }} <span class="sr-only">(current)</span></a></li>
{% else %}
  <li><a href="{{ page.url }}">{{ page.numero }}</a></li>
{% endif %}
{% endfor %}
{% if nexturl is null %}
  <li class="disabled"><a href="#">&raquo;</a></li>
{% else %}
  <li class=""><a href="{{ nexturl }}">&raquo;</a></li>
{% endif %}
  </ul>
</div>

</div>


</div>
</div> <!-- .container -->

{% endblock %}
