{% extends 'NetrunnerdbBuilderBundle::layout.html.twig' %}

{% block body %}


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron visible-sm">
      <div class="container">
        <h1>Welcome on NetrunnerDB!</h1>
        <p>You can explore the public <a href="{{ path('decklists_list', {type:'popular'}) }}">decklists</a> or start building your own <a href="{{ path('decks_list') }}">decks</a>.</p>
      </div>
    </div>


<div class="container">
<div class="row">
<div class="col-md-6">
<div class="page-header">
<h1>Welcome on NetrunnerDB</h1>
<p class="">You can explore the public <a href="{{ path('decklists_list', {type:'popular'}) }}">decklists</a> or start building your own <a href="{{ path('decks_list') }}">decks</a>.</p>
</div>
</div>
<div class="col-md-6">
<div class="panel panel-info">
<div class="panel-heading">
    <h3 class="panel-title"><small class="pull-right">2013-10-17</small>new in 1.1</h3>
  </div>
  <div class="panel-body">
    <ul>
    <li>Public profile pages</li>
    <li>Option to edit a decklist name and description after publication</li>
    <li>Option to remove a decklist from the list of favorites</li>
    <li>Displays other publications of a decklist (from the original deck or from a copy of the decklist)</li>
    </ul>
  </div>
</div>
</div>
</div>

<div class="row">
<div class="col-md-6">
<h3>Popular decklists</h3>
{% for decklist in popular %}
<div class="panel panel-default">
<div class="panel-body">
<div class="row">
<div class="col-sm-2 hidden-xs">
	<img src="{{ asset('/web/bundles/netrunnerdbcards/images/cards/en/' ~ decklist.code ~ '.png') }}" class="card img-responsive" data-toggle="tooltip" data-index="{{ decklist.code }}">
</div>
<div class="col-sm-10">
	<h4>
		<small class="pull-right decklist-social">
			<span class="glyphicon glyphicon-heart social-icon-like"></span> {{ decklist.nbvotes }}
			<span class="glyphicon glyphicon-star social-icon-favorite"></span> {{ decklist.nbfavorites }}
			<span class="glyphicon glyphicon-comment social-icon-comment"></span> {{ decklist.nbcomments }}
		</small>
		<a class="decklist-name" href="{{ path('decklist_detail', { 'decklist_id': decklist.id, 'decklist_name': decklist.prettyname|e('url') }) }}">{{ decklist.name }}</a>
	</h4>
	<h5 class="username author">
		<span class="pull-right decklist-creation">{{ decklist.creation|date('M d') }}</span>
		<a href="{{ path('user_profile_view', {user_id:decklist.user_id,user_name:decklist.username}) }}" class="{{ decklist.usercolor }}">{{ decklist.username }}</a>
		<small class="reputation">{{ decklist.reputation }}</small>
		
	</h5>
</div>
</div>
</div>
</div>
{% endfor %}
</div>
<div class="col-md-6">
<h3>Recent decklists</h3>
{% for decklist in recent %}
<div class="panel panel-default">
<div class="panel-body">
<div class="row">
<div class="col-sm-2 hidden-xs">
	<img src="{{ asset('/web/bundles/netrunnerdbcards/images/cards/en/' ~ decklist.code ~ '.png') }}" class="card img-responsive" data-toggle="tooltip" data-index="{{ decklist.code }}">
</div>
<div class="col-sm-10">
	<h4>
		<small class="pull-right decklist-social">
			<span class="glyphicon glyphicon-heart social-icon-like"></span> {{ decklist.nbvotes }}
			<span class="glyphicon glyphicon-star social-icon-favorite"></span> {{ decklist.nbfavorites }}
			<span class="glyphicon glyphicon-comment social-icon-comment"></span> {{ decklist.nbcomments }}
		</small>
		<a class="decklist-name" href="{{ path('decklist_detail', { 'decklist_id': decklist.id, 'decklist_name': decklist.prettyname|e('url') }) }}">{{ decklist.name }}</a>
	</h4>
	<h5 class="username author">
		<span class="pull-right decklist-creation">{{ decklist.creation|date('M d') }}</span>
		<a href="{{ path('user_profile_view', {user_id:decklist.user_id,user_name:decklist.username}) }}" class="{{ decklist.usercolor }}">{{ decklist.username }}</a>
		<small class="reputation">{{ decklist.reputation }}</small>
		
	</h5>
</div>
</div>
</div>
</div>
{% endfor %}
</div>
</div>

</div> <!-- /container -->

{% endblock %}