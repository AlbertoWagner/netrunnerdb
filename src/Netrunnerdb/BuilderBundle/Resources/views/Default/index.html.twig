{% extends 'NetrunnerdbBuilderBundle::layout.html.twig' %}

{% block head %}
<script src="{{ asset('/web/bundles/netrunnerdbbuilder/js/nrdb.js') }}"></script>
<script type="text/javascript">
$(function() { $('#version-popover').popover({html:true}); });
</script>
{% endblock %}
{% block body %}


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron visible-sm">
      <div class="container">
        <h1>Welcome on NetrunnerDB!</h1>
        <p>You can explore the public <a href="{{ path('decklists_list', {type:'popular'}) }}">decklists</a> or start building your own <a href="{{ path('decks_list') }}">decks</a>.</p>
      </div>
    </div>


<div class="container">
<div class="row">
<div class="col-md-6">
<div class="page-header">
<h1>Welcome on NetrunnerDB</h1>
<p class="">You can explore the public <a href="{{ path('decklists_list', {type:'popular'}) }}">decklists</a> or start building your own <a href="{{ path('decks_list') }}">decks</a>.</p>
<p>Version <a id="version-popover" href="#" data-content="<ul>
    <li>Card comments</li>
    <li>Larger card images</li>
    <li>Save sets selection across sessions</li>
    <li>Graphs in deckbuilder</li>
    <li>No more error when publishing deck</li>
    <li>Comments preview</li>
    <li>More deck slots</li>
    <li>Decklists Hall of Fame</li>
    <li>More items in login dropdown</li>
    <li><b>2- and 3- columns options in deckbuilder</b></li>
    </ul>" title="Version 1.4 - 2014-01-24">1.4</a></p>
</div>
</div>
</div>

<div class="row">
<div class="col-md-6">
<h3>Popular decklists</h3>
{% for decklist in popular %}
<div class="panel panel-default">
<div class="panel-body">
<div class="row">
<div class="col-sm-2 hidden-xs">
	<img src="/web/bundles/netrunnerdbcards/images/cards/en/{{ decklist.code }}.png" class="img-responsive" data-toggle="tooltip" data-index="{{ decklist.code }}">
</div>
<div class="col-sm-10">
	<h4>
		<small class="pull-right decklist-social">
			<span class="glyphicon glyphicon-heart social-icon-like"></span> {{ decklist.nbvotes }}
			<span class="glyphicon glyphicon-star social-icon-favorite"></span> {{ decklist.nbfavorites }}
			<span class="glyphicon glyphicon-comment social-icon-comment"></span> {{ decklist.nbcomments }}
		</small>
		<a class="decklist-name" href="{{ path('decklist_detail', { 'decklist_id': decklist.id, 'decklist_name': decklist.prettyname|e('url') }) }}">{{ decklist.name }}</a>
	</h4>
	<h5 class="username author">
		<span class="pull-right decklist-creation">{{ decklist.creation|date('M d') }}</span>
		<a href="{{ path('user_profile_view', {user_id:decklist.user_id,user_name:decklist.username|e('url')}) }}" class="{{ decklist.usercolor }}">{{ decklist.username }}</a>
		<small class="reputation">{{ decklist.reputation }}</small>
		
	</h5>
</div>
</div>
</div>
</div>
{% endfor %}
</div>
<div class="col-md-6">
<h3>Recent decklists</h3>
{% for decklist in recent %}
<div class="panel panel-default">
<div class="panel-body">
<div class="row">
<div class="col-sm-2 hidden-xs">
	<img src="/web/bundles/netrunnerdbcards/images/cards/en/{{ decklist.code }}.png" class="img-responsive" data-toggle="tooltip" data-index="{{ decklist.code }}">
</div>
<div class="col-sm-10">
	<h4>
		<small class="pull-right decklist-social">
			<span class="glyphicon glyphicon-heart social-icon-like"></span> {{ decklist.nbvotes }}
			<span class="glyphicon glyphicon-star social-icon-favorite"></span> {{ decklist.nbfavorites }}
			<span class="glyphicon glyphicon-comment social-icon-comment"></span> {{ decklist.nbcomments }}
		</small>
		<a class="decklist-name" href="{{ path('decklist_detail', { 'decklist_id': decklist.id, 'decklist_name': decklist.prettyname|e('url') }) }}">{{ decklist.name }}</a>
	</h4>
	<h5 class="username author">
		<span class="pull-right decklist-creation">{{ decklist.creation|date('M d') }}</span>
		<a href="{{ path('user_profile_view', {user_id:decklist.user_id,user_name:decklist.username|e('url')}) }}" class="{{ decklist.usercolor }}">{{ decklist.username }}</a>
		<small class="reputation">{{ decklist.reputation }}</small>
		
	</h5>
</div>
</div>
</div>
</div>
{% endfor %}
</div>
</div>

</div> <!-- /container -->

{% endblock %}