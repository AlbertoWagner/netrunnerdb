    <script type="text/javascript">
	var NRDB = { 
		data_loaded: $.Callbacks(), 
		api_url: {
			sets: '{{ path('api_sets')|raw }}',
			cards: '{{ path('api_cards')|raw }}'
		}, 
		locale: '{{ app.request.locale }}'
	};
{% if app.environment == 'prod' %}
